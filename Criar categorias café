# Sistema simples de cadastro de categorias de caf√©
# Feito apenas para fins demonstrativos

# Dicion√°rio que vai armazenar as categorias
categorias_cafe = {}

def adicionar_categoria(id, nome, descricao):
    """Adiciona uma nova categoria de caf√©"""
    if id in categorias_cafe:
        print(f"‚ö†Ô∏è Categoria com ID {id} j√° existe!")
    else:
        categorias_cafe[id] = {
            "nome": nome,
            "descricao": descricao
        }
        print(f " Categoria '{nome}' adicionada com sucesso!")

def listar_categorias():
    """Mostra todas as categorias cadastradas"""
    if not categorias_cafe:
        print("üì≠ Nenhuma categoria cadastrada.")
    else:
        print("\nüìã Categorias de Caf√©:")
        for id, dados in categorias_cafe.items():
            print(f"ID: {id} | Nome: {dados['nome']} | Descri√ß√£o: {dados['descricao']}")

def editar_categoria(id, novo_nome, nova_descricao):
    """Edita uma categoria existente"""
    if id in categorias_cafe:
        categorias_cafe[id]["nome"] = novo_nome
        categorias_cafe[id]["descricao"] = nova_descricao
        print(f"‚úèÔ∏è Categoria {id} atualizada!")
    else:
        print(f"‚ùå Categoria com ID {id} n√£o encontrada.")

def excluir_categoria(id):
    """Exclui uma categoria"""
    if id in categorias_cafe:
        del categorias_cafe[id]
        print(f"üóëÔ∏è Categoria {id} removida com sucesso!")
    else:
        print(f"‚ùå Categoria {id} n√£o existe.")

# Demonstra√ß√£o
adicionar_categoria(1, "Caf√© Ar√°bica", "Gr√£o de alta qualidade, sabor suave.")
